<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= note.noteTitle %> - Accela Notes</title>
  <link rel="stylesheet" href="/css/protection.css">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  <link rel="icon" href="https://files.catbox.moe/bpi1je.gif" type="image/gif">
  <style>
    /* Reset everything */
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    
    body {
      margin: 0;
      padding: 0;
      overflow-x: hidden;
      font-family: 'Inter', -apple-system, BlinkMacSystemFont, sans-serif;
    }
    
    /* Minimal floating back button */
    .minimal-nav {
      position: fixed;
      top: 20px;
      left: 20px;
      z-index: 9997;
      opacity: 0.7;
      transition: opacity 0.3s, transform 0.3s;
      transform: translateY(0);
    }
    
    .minimal-nav.hidden {
      transform: translateY(-100px);
      opacity: 0;
      pointer-events: none;
    }
    
    .minimal-nav:hover {
      opacity: 1;
    }
    
    .minimal-nav a {
      display: inline-block;
      padding: 10px 18px;
      background: rgba(79, 70, 229, 0.9);
      color: white;
      text-decoration: none;
      border-radius: 10px;
      font-size: 14px;
      font-weight: 600;
      font-family: 'Inter', -apple-system, sans-serif;
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
      transition: all 0.2s;
    }
    
    .minimal-nav a:hover {
      background: rgba(79, 70, 229, 1);
      transform: translateX(-2px);
    }

    /* Print styles for notes */
    @media print {
      .minimal-nav {
        display: none !important;
      }
    }
  </style>
</head>
<body class="no-select">
  
  <!-- ========== WATERMARK PROTECTION ========== 
  <div class="watermark-overlay" id="watermarkOverlay">
    <div class="watermark-pattern" id="watermarkPattern"></div>
  </div>
  <div class="floating-watermark" id="floatingWatermark"></div>
  <div class="corner-watermark" id="cornerWatermark"></div>
  <div class="print-watermark" id="printWatermark" style="display: none;"></div>
  <!-- ========== END WATERMARK ========== -->
-->
  <!-- Minimal navigation -->
  <div class="minimal-nav">
    <a href="/notes/chapter/<%= note.chapterIndex %>">‚Üê Back</a>
  </div>

  <!-- Pure HTML content - no wrappers, no styling -->
  <%- note.htmlContent %>

  <!-- Protection Script -->
  <script src="/js/protection.js"></script>
  <script>
    // Initialize content protection with user info
    (function() {
      var username = '<%= typeof fullUser !== "undefined" && fullUser ? fullUser.username : (typeof user !== "undefined" && user ? user.username : "guest") %>';
      var email = '<%= typeof fullUser !== "undefined" && fullUser && fullUser.email ? fullUser.email : "" %>';
      
      if (typeof initProtection === 'function') {
        initProtection(username, email);
      }
    })();

    // Hide/show back button on scroll
    (function() {
      let lastScroll = 0;
      const backButton = document.querySelector('.minimal-nav');
      
      window.addEventListener('scroll', function() {
        const currentScroll = window.pageYOffset;
        
        // Hide when scrolling down past 50px
        if (currentScroll > 50 && currentScroll > lastScroll) {
          backButton.classList.add('hidden');
        } 
        // Show when scrolling up
        else if (currentScroll < lastScroll) {
          backButton.classList.remove('hidden');
        }
        
        // Always show at the very top
        if (currentScroll <= 10) {
          backButton.classList.remove('hidden');
        }
        
        lastScroll = currentScroll;
      });
    })();
  </script>
</body>
</html>
